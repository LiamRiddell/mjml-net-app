<Page x:Class="Mjml.Net.Editor.Pages.MainEditorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"  
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Mjml.Net.Editor.Pages" 
      xmlns:Wpf="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainEditor" Initialized="Page_Initialized">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Background="#1E1E1E">
            <Wpf:WebView2 x:Name="webviewMonacoEditor" CoreWebView2InitializationCompleted="webviewMonacoEditor_CoreWebView2InitializationCompleted" />
        </Grid>

        <GridSplitter Grid.Column="1" Width="4" VerticalAlignment="Stretch" Background="#373C40" BorderThickness="0,0,0,1" BorderBrush="DarkGray" ResizeDirection="Columns" ResizeBehavior="PreviousAndNext"/>

        <TabControl Grid.Column="2" Background="#1E1E1E">
            <TabItem Header="Preview">
                <Wpf:WebView2 x:Name="webviewPreview" CoreWebView2InitializationCompleted="webviewPreview_CoreWebView2InitializationCompleted" />
            </TabItem>
            <TabItem Header="HTML">
                <Wpf:WebView2 x:Name="webviewHtml" CoreWebView2InitializationCompleted="webviewHtml_CoreWebView2InitializationCompleted" />
            </TabItem>
        </TabControl>
    

    </Grid>
</Page>
